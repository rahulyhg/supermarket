<div class="list-group">
  <ul class="list-unstyled main-category">
  {% for category in categories %}
  {% if category.category_id == category_id %} 
  
    <li><a href="{{ category.href }}" class="list-group-item active">{{ category.name }}</a>
  
  {% if category.children %}
  <ul class="list-unstyled sub-category">
  {% for child in category.children %}
  {% if child.category_id == child_id %}
  <li><a href="{{ child.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-double-right"></i> {{ child.name }}</a></li>
  {% else %} 
  <li><a href="{{ child.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-double-right"></i> {{ child.name }}</a></li>
  {% endif %}
  {% endfor %}
  </ul>
  {% endif %}
  </li>
  {% else %}<li><a href="{{ category.href }}" class="list-group-item">{{ category.name }}</a></li>
  {% endif %}

  {% endfor %}
  </ul>
</div>
