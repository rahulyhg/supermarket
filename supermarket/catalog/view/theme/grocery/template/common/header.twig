<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}" class="{{ direction }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<meta name="theme-color" content="#3ab54a"/>
<link href="catalog/view/theme/grocery/stylesheet/mixed-css.css" rel="stylesheet" />
<link href="catalog/view/theme/grocery/stylesheet/stylesheet.css" rel="stylesheet" />
{% if direction  ==  'rtl' %}
<link href="catalog/view/theme/grocery/stylesheet/bootstrap.rtl.min.css" rel="stylesheet" media="screen" />
{% endif %}
<script src="catalog/view/theme/grocery/js/mixed-js.js"></script>
<script src="catalog/view/theme/grocery/js/common.js"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
<div class="overlay-cart"></div>
<nav id="top">
  <div class="container"><div class="row">
  <ul class="list-unstyled col-sm-6 col-xs-4">
    <li class="inline pull-left"><div class="account"><div class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_account }}</span><span class="arrow"><i class="fa fa-angle-down" aria-hidden="true"></i></span></a>
            <ul class="dropdown-menu dropdown-menu-right">
              {% if logged %}
              <li class="text-capitalize customer"><a>{{'Hi'}}, {{customer_name}}</a><hr/></li>
              <li><a href="{{ account }}"><i class="fa fa-user-circle-o" aria-hidden="true"></i>{{ text_account }}</a></li>
              <li><a href="{{ order }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>{{ text_order }}</a></li>
              <li><a href="{{ transaction }}"><i class="fa fa-exchange" aria-hidden="true"></i>{{ text_transaction }}</a></li>
              <li><a href="{{ download }}"><i class="fa fa-download" aria-hidden="true"></i>{{ text_download }}</a></li>
              <li><a href="{{ logout }}"><i class="fa fa-sign-out" aria-hidden="true"></i>{{ text_logout }}</a></li>
              {% else %}
              <li><a href="{{ register }}">{{ text_register }}</a></li>
              <li><a href="{{ login }}">{{ text_login }}</a></li>
              {% endif %}
            </ul>
          </div></div></li>
    <li class="inline">{{ currency }}</li>
    <li class="inline">{{ language }}</li>
  </ul>
    <div id="top-links" class="nav pull-right col-sm-6 col-xs-8 text-right">
      <ul class="list-inline">
        <li><a href="{{ contact }}"><i class="fa fa-phone"></i></a> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span></li>
        <li><a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a></li>
        <li><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span></a></li>
        <li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="fa fa-share"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a></li>
      </ul>
    </div>
  </div></div>
</nav>
<header>
  <div class="header">
    <!-- sys-notification -->
    <div id="sys-notification">
        <div class="container">
            <div id="notification"></div>
        </div>
    </div>
    <!-- /sys-notification -->
    <div class="container">
      <div class="row">
        <div class="col-sm-3">
          <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
            <h1><a href="{{ home }}">{{ name }}</a></h1>
            {% endif %}</div>
        </div>
        <div class="col-sm-5 col-md-6">{{ search }}</div>
        <div class="col-sm-4 col-md-3 text-right account-cart">
          {{ cart }}
        </div>
      </div>
    </div>
  </div><!--header-->
<div class="menu">{{ menu }}</div>
</header>
